<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"  android:title="@string/action_settings">
    <ListPreference
        android:key="pref_format"
        android:title="@string/pref_format"
        android:defaultValue="@string/pref_format_default"
        android:entries="@array/format_array"
        android:entryValues="@array/format_array_values"
        android:dialogTitle="@string/pref_format_dialog_title" />
    <ListPreference
        android:key="pref_sort"
        android:title="@string/pref_sort"
        android:defaultValue="@string/pref_sort_default"
        android:entries="@array/sort_array"
        android:entryValues="@array/sort_array_values"
        android:dialogTitle="@string/pref_sort_dialog_title" />
</PreferenceScreen>
