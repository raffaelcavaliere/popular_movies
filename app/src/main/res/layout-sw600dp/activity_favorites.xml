<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <fragment android:id="@+id/fragment"
        android:name="com.raffaelcavaliere.popularmovies.local.FavoriteMovieGridFragment"
        tools:layout="@layout/fragment_moviegrid" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:id="@+id/moviedetail_container">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/no_item_selected"
            android:id="@+id/textView"
            android:layout_gravity="center" />
    </FrameLayout>

</LinearLayout>
